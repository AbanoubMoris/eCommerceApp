<?xml version = "1.0" encoding = "utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:layout_width = "match_parent"
    android:layout_height = "wrap_content">

    <EditText
        android:layout_margin="8dp"
        android:id="@+id/search_et"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:background="@drawable/edit_style"
        android:drawablePadding="@dimen/padding_16"
        app:layout_constraintEnd_toStartOf="@id/cart_btn"
        android:drawableStart="@drawable/ic_search"
        android:hint="Search on Store"
        android:textSize="@dimen/text_20"
        android:layout_height="wrap_content"/>

    <ImageButton
        android:id="@+id/barcode_btn"
        app:layout_constraintTop_toTopOf="@id/search_et"
        app:layout_constraintBottom_toBottomOf="@id/search_et"
        app:layout_constraintEnd_toEndOf="@id/search_et"
        android:layout_marginEnd="5dp"
        android:background="@drawable/ic_barcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageButton
        android:id="@+id/voice_btn"
        app:layout_constraintTop_toTopOf="@id/search_et"
        app:layout_constraintBottom_toBottomOf="@id/search_et"
        app:layout_constraintEnd_toStartOf="@id/barcode_btn"
        android:layout_marginEnd="10dp"
        android:background="@drawable/ic_voice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="5dp"
        android:id="@+id/cart_btn"
        android:layout_width="32dp"
        android:layout_height="30dp"
        android:padding="@dimen/padding_8"
        android:layout_margin="@dimen/padding_8"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/ic_cart"
        app:layout_constraintStart_toEndOf="@id/search_et"
        />


</androidx.constraintlayout.widget.ConstraintLayout>